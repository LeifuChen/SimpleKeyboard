<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Custom_Pin_Pad">
        <item name="android:keyBackground">@drawable/pinpad_states</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:keyPreviewLayout">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="Keyboard_Button">
        <item name="android:background">@drawable/btn_ripple_effect</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>

</resources>
